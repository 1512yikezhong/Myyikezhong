<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    xmlns:face="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Xiangqing.XiangQingActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/fanhui"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:src="@drawable/fanhui" />

        <ImageView
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:src="@drawable/aixin" />

        <ImageView
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:src="@drawable/fenshou" />

        <ImageView
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:src="@drawable/fenxiang"
            android:id="@+id/btn_img"/>


        <com.facebook.drawee.view.SimpleDraweeView
            android:layout_marginLeft="180dp"
            android:layout_width="70dp"
            android:layout_height="50dp"
            fresco:roundAsCircle="true"
            fresco:placeholderImage="@drawable/touxiang" />

    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        >


        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/imgt"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="5dp"
            face:roundAsCircle="true"
            />

        <TextView
            android:id="@+id/texts"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            />

        <com.bawei.myyikezhong.Tuijian.ui.view.CustomerView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </com.bawei.myyikezhong.Tuijian.ui.view.CustomerView>
    </LinearLayout>

    <TextView
        android:id="@+id/texta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />


    <fm.jiecao.jcvideoplayer_lib.JCVideoPlayerSimple

        android:id="@+id/xqvideo"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        >
    </fm.jiecao.jcvideoplayer_lib.JCVideoPlayerSimple>

    <TextView
        android:id="@+id/tv_title"
        android:text="女子翻墙"
        android:textSize="20sp"
        android:layout_margin="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <TextView
            android:id="@+id/tv_num"
            android:text="1916"
            android:textSize="15sp"

            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView

            android:text="次播放"
            android:textSize="15sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView

            android:text="今天"
            android:textSize="15sp"
            android:layout_marginLeft="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_time"
            android:text="21.41"
            android:textSize="15sp"

            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:layout_below="@+id/tv_time"
        android:background="#cdcdcd"
        android:gravity="center"
        android:orientation="vertical">

        <com.facebook.drawee.view.SimpleDraweeView
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_alignLeft="@+id/tv_title"
            android:layout_alignStart="@+id/tv_title"
            android:layout_below="@+id/detailVideos"
            android:layout_marginTop="39dp"
            app:placeholderImage="@drawable/raw_1500033586" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="拿起手机速来" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="抢个沙发"
                android:textColor="#50a0e2" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="吧!" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>