<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.bawei.myyikezhong.Bianxie.fx.ShardActivity">
<ImageView
    android:layout_width="100dp"
    android:layout_height="100dp"
    android:layout_gravity="center_horizontal"
    android:layout_marginTop="100dp"
    android:src="@mipmap/raw_1500021052"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center_horizontal"
        android:text="发布成功，快分享给好友捧场吧！~"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="20dp"
        android:layout_marginTop="50dp"
        android:paddingRight="20dp">
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@mipmap/raw_1500022317"
            android:id="@+id/friend"
            android:layout_weight="1"/>
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/kongjian"
            android:src="@mipmap/raw_1500022686"
            android:layout_weight="1"/>
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/wei"
            android:src="@mipmap/raw_1500022698"
            android:layout_weight="1"/>
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/q"
            android:src="@mipmap/raw_1500022714"
            android:layout_weight="1"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
         >
        <TextView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:text="朋友圈"

            android:gravity="center"
            android:layout_weight="1"/>
        <TextView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:text="QQ空间"

            android:gravity="center"
            android:layout_weight="1"/>
        <TextView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:text="微信"

            android:gravity="center"
            android:layout_weight="1"/>
        <TextView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:text="QQ"

            android:gravity="center"
            android:layout_weight="1"/>
    </LinearLayout>
    <Button
        android:layout_width="200dp"
        android:layout_gravity="center_horizontal"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:textColor="#fff"
        android:background="#fa7d7d"
        android:id="@+id/look"
        android:text="前去看看！"/>
</LinearLayout>
